<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/new_info_card_grey">

        <TextView
            android:id="@+id/info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/pond_name"
            android:textColor="@color/pond_name"
            android:text="类别"/>

        <ImageView
            android:id="@+id/info_query"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_query"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/info_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info_title"
            android:layout_marginStart="20dp"
            android:textSize="@dimen/pond_value"
            android:text="value"/>

    </RelativeLayout>

</LinearLayout>